DROP DATABASE IF EXISTS DDLDemo;
CREATE DATABASE DDLDemo;
USE DDLDemo;
CREATE TABLE Student (
    RollNo INT,
    Name VARCHAR(50),
    Age INT
);
INSERT INTO Student (RollNo, Name, Age) VALUES
(1, 'nav', 20),
(2, 'san', 22),
(3, 'dhill', 21);
SELECT * FROM Student;
ALTER TABLE Student ADD Email VARCHAR(100);
UPDATE Student SET Email = 'nav@example.com' WHERE RollNo = 1;
UPDATE Student SET Email = 'dhill@example.com' WHERE RollNo = 2;
SELECT * FROM Student;
TRUNCATE TABLE Student;
SELECT * FROM Student;
DROP TABLE Student;
SHOW TABLES;
